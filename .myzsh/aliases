# Enhanced WHOIS lookups
alias whois="whois -h whois-servers.net"

alias ls="ls --color -h --group-directories-first"
alias lsa='ls -lah'
alias ll='ls -l'
alias la='ls -lA'
alias sl=ls # often screw this up

alias mountdat="truecrypt -t --mount /media/dat/Crypted\ Volumes/dat ~/.truecrypt"
alias dismountdat="truecrypt -t -d ~/.truecrypt"

alias apachestop="sudo /etc/init.d/apache2 stop"
alias apachestart="sudo /etc/init.d/apache2 start"
alias apacherestart="sudo /etc/init.d/apache2 restart"

alias emacs="emacs -nw"
alias xclip="xclip -selection c"

alias httphere="python -m SimpleHTTPServer"
